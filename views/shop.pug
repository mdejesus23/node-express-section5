extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://drive.google.com/uc?export=view&id=1ue24CNrup-WzP_Y0Ma3k5Lv6wPn18K7_", alt="A Book")
                        .card__content
                            h2.product__price $19.99
                            .product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products
            