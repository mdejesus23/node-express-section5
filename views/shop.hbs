    <main>
        <!-- handlebars engine cannot run any logic in its template, we can just output single property/value-->
        <!-- using handlebars will handle more logic on routes to maintain a clean template-->
        {{#if hasProducts }}
            <div class="grid">
                {{#each prods}}
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">{{ this.title }}</h1>
                        </header>
                        <div class="card__image">
                            <img src="https://drive.google.com/uc?export=view&id=1ue24CNrup-WzP_Y0Ma3k5Lv6wPn18K7_" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$19.99</h2>
                            <p class="product__description">A very interesting book about so many even more interesting things!</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                {{/each}}    
            </div>
        {{ else }} 
            <h1>No Products Found!</h1>   
        {{/if}}    
    </main>